# Django Environment Variables Template
# Copy this file to .env and fill in your actual values

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new key with: python -c "import secrets; print('django-insecure-' + secrets.token_urlsafe(50))"
SECRET_KEY=your-secret-key-here

# Debug mode - set to False in production
DEBUG=False

# Allowed hosts - comma separated list (use * for development only)
ALLOWED_HOSTS=localhost,127.0.0.1

# Restaurant Information
RESTAURANT_NAME=Your Restaurant Name
RESTAURANT_PHONE=(555) 123-4567
RESTAURANT_ADDRESS=123 Main St, Your City, Country
RESTAURANT_HOURS=Mon-Fri: 11am-9pm, Sat-Sun: 10am-10pm

# Database Configuration
# For SQLite (development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (production example)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=your_database_name
# DB_USER=your_database_user
# DB_PASSWORD=your_database_password
# DB_HOST=localhost
# DB_PORT=5432